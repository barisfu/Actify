<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btnPressed" />
            <corners
			    android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/btnStartColor"
                android:endColor="@color/btnEndColor"
                android:angle="270" />
            <corners
			    android:radius="3dp" />
        </shape>
    </item>
</selector>
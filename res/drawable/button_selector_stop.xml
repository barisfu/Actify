<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/btnStopPressedColor" />
            <corners
			    android:radius="3dp" />
            <padding
                android:left="5dp"
                android:right="5dp" 
                android:top="13dp"
                android:bottom="13dp" 
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/btnStopStartColor"
                android:endColor="@color/btnStopEndColor"
                android:angle="270" />
            <corners
			    android:radius="3dp" />
            <padding
                android:left="5dp"
                android:right="5dp" 
                android:top="13dp"
                android:bottom="13dp" 
                />
        </shape>
    </item>
</selector>